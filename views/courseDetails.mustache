<!DOCTYPE html>
<html>
<head>
  {{> header}}
</head>
<body class="container mt-4">

<h1 class="mb-4">{{course.name}}</h1>

<div class="text-right mb-3">
  {{^user}}
    <a id="login" href="/login" class="btn btn-primary">Sign in</a>
  {{/user}}

  {{#user}}
    <a id="logout" href="/logout" class="btn btn-primary">Sign out</a>
  {{/user}}
</div>

<div class="card">
  <div class="card-body">
    <p class="card-text"><strong>Description:</strong> {{course.description}}</p>
    <p class="card-text"><strong>Location:</strong> {{course.location}}</p>
    <p class="card-text"><strong>Schedule:</strong> {{course.schedule}}</p>
    <p class="card-text"><strong>Price:</strong> Â£{{course.price}}</p>

    <div class="mt-4">
      <a href="/courses/{{course._id}}/guest-book" class="btn btn-success">Book This Course</a>
    </div>

  </div>
</div>

<div class="mt-5">
  <h3>Classes in this Course</h3>

  {{#classes.length}}
    <ul class="list-group">
  {{#classes}}

    <li class="list-group-item">
      <div class="d-flex justify-content-between align-items-start flex-column flex-md-row">
      
        <div>
          <strong>{{name}}</strong><br>
          <span><strong>Date:</strong> {{date}}</span><br>
          <span><strong>Time:</strong> {{time}}</span><br>
          <span><strong>Location:</strong> {{location}}</span>
        </div>

        <form method="POST" action="//classes/:id/guest-book" class="mt-3 mt-md-0">
          <a href="/classes/{{_id}}/guest-book" class="btn btn-outline-success mt-3 mt-md-0">Book This Class</a>
          
        </form>
      </div>
    </li>
  {{/classes}}
</ul>

  {{/classes.length}}

  {{^classes.length}}
    <p class="text-muted">No classes have been added to this course yet.</p>
  {{/classes.length}}
</div>


<div class="mt-4">
  <form method="POST" action="/courses/{{course._id}}/book">
    <button type="submit" class="btn btn-success">Book This Course</button>
  </form>
</div>

</body>
</html>
